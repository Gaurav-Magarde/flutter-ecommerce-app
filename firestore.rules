rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: Yeh testing ke liye hai. Isse koi bhi aapka data read kar sakta hai.
    match /Products/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Sirf logged-in user write kar sakta hai
    }
    // Baaki collections ke liye apne rules yahan daalo
    match /{document=**} {
        allow read, write: if request.auth != null;
    }
  }
}

